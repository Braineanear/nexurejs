{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "examples",
    "tests",
    "benchmarks",
    "**/*.spec.ts",
    "**/*.test.ts",
    "src/utils/stream-optimizer.js"
  ]
}
