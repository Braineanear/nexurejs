{
  "name": "nexurejs",
  "version": "0.2.0",
  "description": "A high-performance, modular Node.js framework with modern developer experience",
  "main": "dist/cjs/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:all": "npm run build && npm run build:cjs && npm run build:native",
    "build:cjs": "tsc -p tsconfig.build.json --module commonjs --outDir dist/cjs",
    "build:native": "node-gyp rebuild",
    "postbuild": "node scripts/fix-imports.js",
    "install": "node scripts/install.js",
    "dev": "tsc -p tsconfig.json --watch",
    "dev:run": "node --loader ./scripts/resolve-extensions.js dist/index.js",
    "start": "node dist/index.js",
    "start:dev": "ts-node --experimental-specifier-resolution=node src/index.ts",
    "example:nolint": "NODE_OPTIONS=\"--no-warnings\" ts-node --experimental-specifier-resolution=node examples/native-modules-example.ts",
    "test:all": "npm run test:core && npm run test:errors && npm run test:compatibility",
    "test:check": "node test/version-check.js",
    "pretest:all": "npm run test:check",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "benchmark": "node --loader ts-node/esm benchmarks/index.ts",
    "release": "node scripts/release.js",
    "profile": "node scripts/run-profiling.js",
    "scripts": "node scripts/run-scripts.js",
    "example": "ts-node --experimental-specifier-resolution=node examples/native-modules-example.ts"
  },
  "keywords": [
    "nodejs",
    "framework",
    "http",
    "server",
    "web",
    "api",
    "rest",
    "typescript",
    "dependency-injection",
    "performance"
  ],
  "author": "Mahmoud Yasser",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/node": "^22.13.10",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "husky": "^9.1.7",
    "node-addon-api": "^7.1.1",
    "node-gyp": "^10.0.1",
    "prettier": "^3.5.3",
    "tar": "^7.4.3",
    "tar-stream": "^3.1.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0",
    "ws": "^8.16.0"
  },
  "dependencies": {
    "reflect-metadata": "^0.2.1"
  },
  "optionalDependencies": {
    "ioredis": "^5.3.2",
    "nexurejs-native-darwin-arm64": "^0.1.0",
    "nexurejs-native-darwin-x64": "^0.1.0",
    "nexurejs-native-linux-x64": "^0.1.0",
    "nexurejs-native-win32-x64": "^0.1.0",
    "simdjson": "^0.9.2",
    "zlib-sync": "^0.1.8"
  },
  "engines": {
    "node": ">=16.14.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Braineanear/nexurejs.git"
  },
  "bugs": {
    "url": "https://github.com/Braineanear/nexurejs/issues"
  },
  "homepage": "https://github.com/Braineanear/nexurejs#readme",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./native": {
      "import": "./dist/native/index.js",
      "require": "./dist/cjs/native/index.js"
    },
    "./http": {
      "import": "./dist/http/index.js",
      "require": "./dist/cjs/http/index.js"
    },
    "./routing": {
      "import": "./dist/routing/index.js",
      "require": "./dist/cjs/routing/index.js"
    },
    "./security": {
      "import": "./dist/security/index.js",
      "require": "./dist/cjs/security/index.js"
    }
  }
}
